#!/bin/sh
# vim: set ts=4 sw=4 et:

PATH=/usr/bin:/usr/sbin

. /etc/runit/functions

msg "Welcome to Void!"

[ -r /etc/rc.conf ] && . /etc/rc.conf

# Start core services: one-time system tasks.
detect_virt
for cs in /etc/runit/core-services/*.sh; do
    if [ -r "$cs" ]; then
        kmsg "start:core:$cs"
        . "$cs"
        kmsg "finish:core:$cs"
    fi
done
kmsg "finish:core"

msg "Initialization complete, running stage 2..."
